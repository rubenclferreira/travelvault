<p id="notice"><%= notice %></p>

<h1>Listing Origins</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Departure</th>
      <th>Date</th>
      <th>Airline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @origins.each do |origin| %>
      <tr>
        <td><%= origin.location %></td>
        <td><%= origin.departure %></td>
        <td><%= origin.date %></td>
        <td><%= origin.airline %></td>
        <td><%= link_to 'Show', origin %></td>
        <td><%= link_to 'Edit', edit_origin_path(origin) %></td>
        <td><%= link_to 'Destroy', origin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

